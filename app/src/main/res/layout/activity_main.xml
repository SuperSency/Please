<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/two">
    <TextView
        android:id="@+id/data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="2016"
        android:gravity="left"
        android:textColor="#272636"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/loca"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/location"
            />
        <TextView
            android:id="@+id/city"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:textSize="35dp"
            android:text="西安"
            android:layout_marginLeft="3dp"
            android:textColor="#272636"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#272636"
            android:gravity="left"
            android:layout_marginTop="15dp"
            android:textSize="60dp"
           />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                />

            <TextView
                android:id="@+id/weather"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:textSize="30dp"
                android:textColor="#272636"
                />

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/degree"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"

        android:textSize="30dp"
        android:textColor="#272636" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

            <TextView
                android:id="@+id/degree1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>
            <TextView
                android:id="@+id/weather1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

            <TextView
                android:id="@+id/degree2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>
            <TextView
                android:id="@+id/weather2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

            <TextView
                android:id="@+id/degree3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>
            <TextView
                android:id="@+id/weather3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

            <TextView
                android:id="@+id/degree4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>
            <TextView
                android:id="@+id/weather4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

            <TextView
                android:id="@+id/degree5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>
            <TextView
                android:id="@+id/weather5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

            <TextView
                android:id="@+id/degree6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>
            <TextView
                android:id="@+id/weather6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textColor="#272636"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_city"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:layout_marginLeft="3dp"
            android:background="@drawable/edit"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"/>
        <Button
            android:id="@+id/summit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:text="确定"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#272636"
            android:background="@drawable/edit"
            />
    </LinearLayout>

</LinearLayout>
